= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title, class: 'js_character-counter', 'data-target': '#js_character-counter-display_title'
    %p
      %small
        %span#js_character-counter-display_title 0
        文字
  .field
    = f.label :body
    = f.text_area :body, class: 'js_character-counter', 'data-target': '#js_character-counter-display_body'
    %p
      %small
        %span#js_character-counter-display_body 0
        文字
  .actions
    = f.submit 'Save'
